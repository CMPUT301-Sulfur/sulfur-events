<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- GOLD BACK BUTTON -->
    <ImageButton
        android:id="@+id/btnBackEventDetail"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_media_previous"
        android:tint="#D4AF37"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- TITLE -->
    <TextView
        android:id="@+id/tvEventTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Image"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#D4AF37"
        android:letterSpacing="0.05"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- GOLD DIVIDER -->
    <View
        android:id="@+id/goldDividerImageDetail"
        android:layout_width="150dp"
        android:layout_height="2dp"
        android:background="#D4AF37"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvEventTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ORGANIZER INFO -->
    <TextView
        android:id="@+id/tvEventInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Organizer:"
        android:textColor="#F5E7B0"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/goldDividerImageDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- EVENT IMAGE -->
    <ImageView
        android:id="@+id/imgEventDetail"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:background="#222222"
        android:layout_marginTop="30dp"
        android:padding="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvEventInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:foreground="?android:attr/selectableItemBackground" />

    <!-- DELETE IMAGE BUTTON (GOLD) -->
    <Button
        android:id="@+id/btnDeleteImage"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="Delete Image"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:backgroundTint="#D4AF37"
        android:paddingVertical="10dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/imgEventDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- BACK BUTTON (BOTTOM) -->
    <Button
        android:id="@+id/btnBackEventDetailBottom"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#222222"
        android:paddingVertical="10dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/btnDeleteImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
