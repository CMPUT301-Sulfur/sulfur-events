<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:layout_marginBottom="6dp">

        <!-- Thumbnail -->
        <ImageView
            android:id="@+id/imgEventThumbnail"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            android:layout_marginEnd="10dp" />

        <!-- Info column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvImageEventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvImageEventEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organizer: example@email.com"
                android:textSize="13sp"
                android:textColor="#333333"
                android:layout_marginTop="1dp" />

            <Button
                android:id="@+id/btnManageEventImages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View / Delete Images"
                android:backgroundTint="#B0B8C3"
                android:textColor="#000000"
                android:layout_marginTop="4dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="3dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
