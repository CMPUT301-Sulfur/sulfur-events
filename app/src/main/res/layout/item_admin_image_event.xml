<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:backgroundTint="#111111">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgEventThumbnail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_image_bg"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvImageEventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#D4AF37"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvImageEventEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F5E7B0"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <Button
                android:id="@+id/btnManageEventImages"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="View Images"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#D4AF37"
                android:paddingVertical="6dp"
                android:paddingHorizontal="12dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
