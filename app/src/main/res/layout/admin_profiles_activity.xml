<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- GOLD BACK BUTTON -->
    <ImageButton
        android:id="@+id/btnBackProfiles"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_media_previous"
        android:tint="#D4AF37"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- TITLE -->
    <TextView
        android:id="@+id/tvProfilesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Profiles"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#D4AF37"
        android:letterSpacing="0.05"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- GOLD DIVIDER -->
    <View
        android:id="@+id/goldDividerProfiles"
        android:layout_width="160dp"
        android:layout_height="2dp"
        android:background="#D4AF37"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvProfilesTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- LISTVIEW (WORKS WITH YOUR CURRENT JAVA + ADAPTER) -->
    <ListView
        android:id="@+id/listViewProfiles"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:divider="#444444"
        android:dividerHeight="1dp"
        android:background="#111111"
        android:padding="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/goldDividerProfiles"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
