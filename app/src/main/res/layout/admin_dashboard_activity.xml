<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8E3F0"
    tools:context=".AdminDashboardActivity">

    <TextView
        android:id="@+id/tvAdminTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Dashboard"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnManageEvents"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Manage Events"
        android:textSize="18sp"
        android:backgroundTint="#B0B8C3"
        android:textColor="#000000"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/tvAdminTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnManageProfiles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Manage Profiles"
        android:textSize="18sp"
        android:backgroundTint="#B0B8C3"
        android:textColor="#000000"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/btnManageEvents"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnManageImages"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Manage Images"
        android:textSize="18sp"
        android:backgroundTint="#B0B8C3"
        android:textColor="#000000"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/btnManageProfiles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnNotificationLogs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View Notification Logs"
        android:textAllCaps="false"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/btnManageImages"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>