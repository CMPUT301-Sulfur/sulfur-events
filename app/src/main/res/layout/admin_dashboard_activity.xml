<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8E3F0"
    tools:context=".AdminDashboardActivity">

    <!-- Page Title -->
    <TextView
        android:id="@+id/tvAdminTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Dashboard"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp" />

    <!-- Manage Events -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnManageEvents"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Manage Events"
        android:textSize="18sp"
        android:textColor="#ffffff"
        app:cornerRadius="30dp"
        android:backgroundTint="#5A67D8"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/tvAdminTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Manage Profiles -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnManageProfiles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Manage Profiles"
        android:textSize="18sp"
        android:textColor="#ffffff"
        app:cornerRadius="30dp"
        android:backgroundTint="#5A67D8"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnManageEvents"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Manage Images -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnManageImages"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Manage Images"
        android:textSize="18sp"
        android:textColor="#ffffff"
        app:cornerRadius="30dp"
        android:backgroundTint="#5A67D8"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnManageProfiles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- View Notification Logs -->
    <Button
        android:id="@+id/btnNotificationLogs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View Notification Logs"
        android:textAllCaps="false"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/btnManageImages"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Back to User Mode -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/back_to_user_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Back to User Mode"
        android:textSize="16sp"
        android:textColor="#ffffff"
        app:cornerRadius="30dp"
        android:backgroundTint="#D32F2F"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toBottomOf="@id/btnNotificationLogs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
