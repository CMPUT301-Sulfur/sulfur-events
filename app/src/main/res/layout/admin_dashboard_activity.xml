<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".AdminDashboardActivity">

    <!-- GOLD TITLE -->
    <TextView
        android:id="@+id/tvAdminTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Dashboard"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#D4AF37"
        android:letterSpacing="0.05"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp" />

    <!-- GOLD DIVIDER -->
    <View
        android:id="@+id/goldDivider"
        android:layout_width="140dp"
        android:layout_height="2dp"
        android:background="#D4AF37"
        app:layout_constraintTop_toBottomOf="@id/tvAdminTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"/>

    <!-- MANAGE EVENTS -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnManageEvents"
        style="@style/GoldAdminButton"
        android:text="Manage Events"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/goldDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- MANAGE PROFILES -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnManageProfiles"
        style="@style/GoldAdminButton"
        android:text="Manage Profiles"
        app:layout_constraintTop_toBottomOf="@id/btnManageEvents"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- MANAGE IMAGES -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnManageImages"
        style="@style/GoldAdminButton"
        android:text="Manage Images"
        app:layout_constraintTop_toBottomOf="@id/btnManageProfiles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- VIEW NOTIFICATION LOGS -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNotificationLogs"
        style="@style/GoldAdminButton"
        android:text="Notification Logs"
        app:layout_constraintTop_toBottomOf="@id/btnManageImages"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BACK TO USER MODE (RED BUTTON) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/back_to_user_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Back to User Mode"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        app:cornerRadius="40dp"
        android:backgroundTint="#B91C1C"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintTop_toBottomOf="@id/btnNotificationLogs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
