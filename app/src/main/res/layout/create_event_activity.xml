<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:fillViewport="true"
    android:background="#D7DDF7">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:src="@drawable/back_arrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Event"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="@id/btnBack" />

        <!-- Name Event -->
        <TextView
            android:id="@+id/lblNameEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name Event"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etEventName"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:hint="Title"
            android:background="@drawable/rounded_input"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/lblNameEvent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Description -->
        <TextView
            android:id="@+id/lblDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Description"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etEventName" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:background="@drawable/rounded_input"
            android:backgroundTint="#C0C4DB"
            android:gravity="top"
            android:hint="Description"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lblDescription" />

        <!-- Registration Period -->
        <TextView
            android:id="@+id/lblRegPeriod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Registration Period"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/etDescription"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/etStartDate"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:hint="Start (MM/DD/YYYY)"
            android:background="@drawable/rounded_input"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/lblRegPeriod"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/etEndDate"
            app:layout_constraintHorizontal_weight="1" />

        <EditText
            android:id="@+id/etEndDate"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:hint="End (MM/DD/YYYY)"
            android:background="@drawable/rounded_input"
            android:padding="10dp"
            app:layout_constraintStart_toEndOf="@id/etStartDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/etStartDate"
            app:layout_constraintHorizontal_weight="1" />

        <!-- Location -->
        <TextView
            android:id="@+id/lblLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Location"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/etStartDate"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etLocation"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:hint="Location"
            android:background="@drawable/rounded_input"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/lblLocation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnViewLocation" />

        <Button
            android:id="@+id/btnViewLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Location"
            app:layout_constraintTop_toTopOf="@id/etLocation"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Limit Guests -->
        <TextView
            android:id="@+id/lblLimitGuests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Limit Guests"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/etLocation"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etLimitGuests"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:hint="Limit Size"
            android:inputType="number"
            android:background="@drawable/rounded_input"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/lblLimitGuests"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Upload Poster -->
        <TextView
            android:id="@+id/lblPoster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Event Poster"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/etLimitGuests"
            app:layout_constraintStart_toStartOf="parent" />

        <FrameLayout
            android:id="@+id/posterUploadArea"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:background="@drawable/rounded_input"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/lblPoster"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/upload" />
        </FrameLayout>

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnCreateEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:backgroundTint="#67E084"
            android:text="Generate Link and Add Event"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/posterUploadArea" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
