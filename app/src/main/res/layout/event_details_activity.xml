<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/event_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp">

    <!-- GOLD BACK BUTTON -->
    <ImageButton
        android:id="@+id/back_button_details"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_media_previous"
        android:tint="#D4AF37"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <!-- PAGE TITLE -->
    <TextView
        android:id="@+id/title_event_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Details"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#D4AF37"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- GOLD DIVIDER -->
    <View
        android:id="@+id/gold_divider_event_details"
        android:layout_width="160dp"
        android:layout_height="2dp"
        android:background="#D4AF37"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/title_event_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- SCROLL CONTENT -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/gold_divider_event_details"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- EVENT INFO CARD -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                android:background="#111111">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@color/gray">

                    <ImageView
                        android:id="@+id/EntrantEventImage"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:scaleType="centerCrop"
                        android:background="#333333"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/event_name_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Event Name"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#D4AF37"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/event_organizer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Organizer: "
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:textColor="@color/yellow"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#D4AF37"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/event_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Event description goes here"
                        android:textSize="14sp"
                        android:textColor="@color/yellow"
                        android:maxLines="4"
                        android:ellipsize="end"
                        android:layout_marginBottom="20dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#444444"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/total_entrants"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Entrants: 0"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#D4AF37" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- LOADING -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginBottom="18dp" />

            <!-- JOIN BUTTON -->
            <Button
                android:id="@+id/join_leave_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Join Waiting List"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:backgroundTint="#D4AF37"
                android:padding="16dp"
                android:layout_marginBottom="12dp" />

            <!-- ACCEPT INVITE -->
            <Button
                android:id="@+id/accept_invite_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Accept Invitation"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:backgroundTint="#67E084"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone" />

            <!-- DECLINE INVITE -->
            <Button
                android:id="@+id/decline_invite_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Decline Invitation"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:backgroundTint="#FF8A80"
                android:padding="16dp"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
