<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:padding="16dp">

    <!-- BACK BUTTON -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/back_arrow"
        android:contentDescription="Back"
        android:layout_gravity="start"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <!-- PAGE TITLE (MATCHES ORGANIZER ACTIVITY) -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Waiting List"
        android:textColor="#D4AF37"
        android:textSize="28sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:gravity="center"
        android:layout_marginTop="30dp" />

    <!-- GOLD DIVIDER -->
    <View
        android:id="@+id/titleDivider"
        android:layout_width="180dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:background="#D4AF37"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No entrants on the waiting list."
        android:textColor="@color/white"
        android:visibility="gone"
        android:layout_marginTop="12dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvWaitlist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btnSendSelectedInvites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Invites"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginTop="8dp"
        android:background="@drawable/gold_border_rounded"
        android:textColor="@color/yellow"/>

</LinearLayout>