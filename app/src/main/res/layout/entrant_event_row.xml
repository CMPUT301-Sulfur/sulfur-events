<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="14dp"
    app:cardCornerRadius="22dp"
    app:cardElevation="10dp"
    android:backgroundTint="#111111">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- EVENT IMAGE -->
        <ImageView
            android:id="@+id/EntrantEventImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:background="#333333"
            android:adjustViewBounds="true"
            android:layout_marginBottom="12dp"
            android:clipToOutline="true" />

        <!-- EVENT NAME -->
        <TextView
            android:id="@+id/event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample Event"
            android:textColor="#D4AF37"
            android:textStyle="bold"
            android:textSize="20sp"
            android:letterSpacing="0.02"/>

        <!-- DETAILS -->
        <TextView
            android:id="@+id/event_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details: ..."
            android:textColor="#F5E7B0"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            android:maxLines="3"
            android:ellipsize="end"/>

        <!-- DATE -->
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: Jan 10 â†’ Jan 12"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="6dp"/>

        <!-- LOCATION -->
        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: Edmonton"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <!-- CAPACITY -->
        <TextView
            android:id="@+id/capacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capacity: 150"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <!-- JOIN BUTTON -->
        <Button
            android:id="@+id/join_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join Waiting List"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:backgroundTint="#D4AF37"
            android:layout_marginTop="14dp"
            android:paddingHorizontal="18dp"
            android:paddingVertical="6dp"
            app:cornerRadius="40dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
