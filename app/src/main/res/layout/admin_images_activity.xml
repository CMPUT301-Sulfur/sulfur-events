<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- GOLD BACK BUTTON -->
    <ImageButton
        android:id="@+id/btnBackImages"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_media_previous"
        android:tint="#D4AF37"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- PAGE TITLE -->
    <TextView
        android:id="@+id/tvImagesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Images"
        android:textColor="#D4AF37"
        android:textSize="28sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:padding="4dp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- GOLD DIVIDER -->
    <View
        android:id="@+id/goldDividerImages"
        android:layout_width="180dp"
        android:layout_height="2dp"
        android:background="#D4AF37"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvImagesTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- LIST OF EVENTS THAT HAVE IMAGES -->
    <ListView
        android:id="@+id/listViewImageEvents"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#111111"
        android:divider="#333333"
        android:dividerHeight="1dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/goldDividerImages"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
