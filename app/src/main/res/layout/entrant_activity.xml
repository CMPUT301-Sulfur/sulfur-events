<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/waiting_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp">

    <!-- PAGE TITLE -->
    <TextView
        android:id="@+id/tvJoinableTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Joinable Events"
        android:textColor="#D4AF37"
        android:textSize="28sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- GOLD DIVIDER -->
    <View
        android:id="@+id/goldDivider"
        android:layout_width="180dp"
        android:layout_height="2dp"
        android:background="#D4AF37"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvJoinableTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- TOP BUTTON ROW -->
    <!-- TOP BUTTON ROW (Cleaner & More Balanced) -->
    <LinearLayout
        android:id="@+id/top_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="28dp"
        android:paddingHorizontal="12dp"
        app:layout_constraintTop_toBottomOf="@id/goldDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Guidelines Button -->
        <Button
            android:id="@+id/btn_lottery_guidelines"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Guidelines"
            android:textColor="#000000"
            android:backgroundTint="#D4AF37"
            android:paddingVertical="10dp"
            android:layout_marginEnd="10dp"
            app:cornerRadius="40dp"/>

        <!-- Filter Button -->
        <Button
            android:id="@+id/filter_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Filter"
            android:textColor="#000000"
            android:backgroundTint="#D4AF37"
            android:paddingVertical="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cornerRadius="40dp"/>

        <!-- History Button -->
        <ImageButton
            android:id="@+id/history_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_recent_history"
            android:tint="#D4AF37"
            android:padding="8dp"
            android:layout_marginStart="10dp"/>
    </LinearLayout>



    <!-- FILTER STATUS -->
    <TextView
        android:id="@+id/filter_status_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#F5E7B0"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/top_buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- CLEAR FILTERS -->
    <Button
        android:id="@+id/clear_filters_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Filters"
        android:textColor="#000000"
        android:backgroundTint="#B0B0B0"
        android:padding="6dp"
        android:textSize="12sp"
        android:visibility="gone"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/filter_status_text"
        app:layout_constraintStart_toStartOf="parent"/>


    <!-- LOADING -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/clear_filters_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- EMPTY STATE -->
    <!-- EMPTY STATE -->
    <TextView
        android:id="@+id/events_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No joinable events right now."
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/clear_filters_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- EVENT LABEL (required by Java!) -->
    <TextView
        android:id="@+id/event_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available Events"
        android:textColor="#D4AF37"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/events_empty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- EVENT LIST -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:clipToPadding="false"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/events_empty"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- BOTTOM NAV -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#111111"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- NOTIFICATION FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:tint="#000000"
        android:backgroundTint="#D4AF37"
        app:srcCompat="@drawable/ic_notifications"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:tint="@android:color/black"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
