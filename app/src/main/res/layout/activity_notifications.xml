<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="16dp">

    <!-- Header Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/back_arrow"
            android:tint="#D4AF37"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/tvNotificationsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#D4AF37"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- GOLD DIVIDER -->
    <View
        android:layout_width="150dp"
        android:layout_height="2dp"
        android:background="#D4AF37"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>

    <!-- ===== NEW NOTIFICATIONS SECTION ===== -->
    <TextView
        android:id="@+id/tvNewHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#D4AF37"
        android:layout_marginTop="18dp"/>

    <TextView
        android:id="@+id/tvEmptyNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No new notifications."
        android:textColor="#AAAAAA"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNewNotifications"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:nestedScrollingEnabled="true"/>

    <!-- ===== HISTORY (COLLAPSIBLE) ===== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tvHistoryHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="History"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#D4AF37"/>

        <TextView
            android:id="@+id/tvToggleHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show history"
            android:textStyle="bold"
            android:textColor="#6B4EFF"
            android:padding="6dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvEmptyHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No history yet."
        android:textColor="#AAAAAA"
        android:layout_marginTop="6dp"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHistoryNotifications"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="6dp"
        android:visibility="gone"
        android:nestedScrollingEnabled="true"/>

</LinearLayout>
