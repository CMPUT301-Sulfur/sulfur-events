<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="14dp"
    app:cardCornerRadius="22dp"
    app:cardElevation="10dp"
    android:backgroundTint="#111111">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- EVENT IMAGE -->
        <ImageView
            android:id="@+id/EventImageCard"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="12dp"
            android:adjustViewBounds="true"
            android:background="#333333"
            android:clipToOutline="true"
            android:scaleType="centerCrop" />

        <!-- EVENT NAME -->
        <TextView
            android:id="@+id/EventNameCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.02"
            android:text="Sample Event"
            android:textColor="#D4AF37"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- DATE -->
        <TextView
            android:id="@+id/DateDetailsCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Date: Jan 10 â†’ Jan 12"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- LOCATION -->
        <TextView
            android:id="@+id/LocationDetailsCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Location: Edmonton"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- CAPACITY -->
        <TextView
            android:id="@+id/CapacityDetailsCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Capacity: 250"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- BUTTON -->
        <Button
            android:id="@+id/EditEventButtonCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:backgroundTint="#D4AF37"
            android:paddingHorizontal="18dp"
            android:paddingVertical="6dp"
            android:text="View Details"
            android:textAllCaps="false"
            android:textColor="#000000"
            app:cornerRadius="40dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>







