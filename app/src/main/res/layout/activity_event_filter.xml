<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- GOLD BACK BUTTON -->
    <ImageButton
        android:id="@+id/btnBackFilters"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_media_previous"
        android:tint="#D4AF37"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- SCROLLER CONTENT -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnBackFilters"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- TITLE -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Filter Events"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#D4AF37"
                android:gravity="center"
                android:layout_marginBottom="26dp" />

            <!-- KEYWORD FILTER -->
            <CheckBox
                android:id="@+id/filter_by_keyword_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Filter by Keyword"
                android:textColor="#F5E7B0"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/search_keyword_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter keyword to search"
                android:inputType="text"
                android:padding="14dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#777777"
                android:enabled="false"
                android:background="#111111"
                android:layout_marginBottom="16dp" />

            <!-- LOCATION FILTER -->
            <CheckBox
                android:id="@+id/filter_by_location_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Filter by Location"
                android:textColor="#F5E7B0"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/location_filter_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter location"
                android:inputType="text"
                android:padding="14dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#777777"
                android:background="#111111"
                android:layout_marginBottom="16dp"
                android:enabled="false" />

            <!-- DATE FILTER CHECKBOX -->
            <CheckBox
                android:id="@+id/filter_by_date_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Filter by Availability Dates"
                android:textColor="#F5E7B0"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />

            <!-- START DATE -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Date:"
                android:textColor="#D4AF37"
                android:textSize="14sp"
                android:layout_marginTop="10dp" />

            <EditText
                android:id="@+id/start_date_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="MM/DD/YYYY"
                android:padding="14dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#777777"
                android:background="#111111"
                android:focusable="false"
                android:clickable="true"
                android:enabled="false" />

            <!-- END DATE -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="End Date:"
                android:textColor="#D4AF37"
                android:textSize="14sp"
                android:layout_marginTop="14dp" />

            <EditText
                android:id="@+id/end_date_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="MM/DD/YYYY"
                android:padding="14dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#777777"
                android:background="#111111"
                android:layout_marginBottom="26dp"
                android:focusable="false"
                android:clickable="true"
                android:enabled="false" />

            <!-- BUTTON ROW -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/clear_filters_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Clear Filters"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#6A6A6A"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/apply_filters_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Apply Filters"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:backgroundTint="#D4AF37"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
