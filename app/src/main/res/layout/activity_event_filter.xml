<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filter Events"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:gravity="center"/>

        <!-- Keyword Filter Section -->
        <CheckBox
            android:id="@+id/filter_by_keyword_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filter by Keyword"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/search_keyword_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter keyword to search"
            android:inputType="text"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:enabled="false"/>

        <!-- Location Filter Section -->
        <CheckBox
            android:id="@+id/filter_by_location_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filter by Location"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/location_filter_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter location"
            android:inputType="text"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:enabled="false"/>

        <!-- Date Filter Section -->
        <CheckBox
            android:id="@+id/filter_by_date_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filter by Availability Dates"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Date:"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/start_date_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="MM/DD/YYYY"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true"
            android:padding="12dp"
            android:enabled="false"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End Date:"
            android:textSize="14sp"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/end_date_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="MM/DD/YYYY"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            android:enabled="false"/>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/clear_filters_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clear Filters"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/apply_filters_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Apply Filters"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>